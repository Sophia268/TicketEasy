<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TicketEasy.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:Class="TicketEasy.Views.MainView"
             x:DataType="vm:MainWindowViewModel">

    <Grid RowDefinitions="Auto, *" Margin="16">
        
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="TicketEasy" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding AppVersion, StringFormat='v{0}'}" VerticalAlignment="Bottom" Foreground="Gray"/>
            </StackPanel>
            <Button Grid.Column="1" Content="About" Command="{Binding ToggleAboutCommand}"/>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" IsVisible="{Binding !ShowAbout}">
            <StackPanel Spacing="20">
                
                <!-- Product & Connect -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Product Configuration" FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                            <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding ProductId}" Watermark="Product ID" Margin="0,0,8,0"/>
                            <Button Grid.Row="0" Grid.Column="1" Content="Connect" Command="{Binding ConnectCommand}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Scan Action -->
                <Button Content="Scan QR Code" Command="{Binding ScanCommand}" 
                        HorizontalAlignment="Stretch" Height="60" FontSize="18" FontWeight="Bold"
                        CornerRadius="8"/>

                <!-- Manual Check -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Manual Check" FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBox Grid.Column="0" Text="{Binding ManualCode}" Watermark="Enter Ticket Code" Margin="0,0,8,0"/>
                            <Button Grid.Column="1" Content="Check" Command="{Binding ManualCheckCommand}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Logs -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Activity Log" FontWeight="SemiBold"/>
                        <ListBox ItemsSource="{Binding Logs}" Height="200" Background="#F5F5F5" BorderThickness="0" CornerRadius="4">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="12" Margin="2"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <!-- Purchase Link -->
                <Button Content="Buy Ticket / 购票链接" Command="{Binding OpenPurchaseLinkCommand}" 
                        HorizontalAlignment="Center" Background="Transparent" Foreground="{DynamicResource SystemAccentColor}"
                        BorderThickness="0"/>

            </StackPanel>
        </ScrollViewer>

        <!-- About Content -->
        <ScrollViewer Grid.Row="1" IsVisible="{Binding ShowAbout}">
            <StackPanel Spacing="20" Margin="10,30,10,30" HorizontalAlignment="Center">
                <TextBlock Text="TicketEasy" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding AppVersion, StringFormat='Version {0}'}" HorizontalAlignment="Center" Foreground="Gray"/>
                
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" MaxWidth="300"
                           Text="A simple and efficient ticket verification tool. Connect with your product ID and start scanning."/>

                <Button Content="Close" Command="{Binding ToggleAboutCommand}" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>

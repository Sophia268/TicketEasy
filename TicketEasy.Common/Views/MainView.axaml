<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TicketEasy.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:Class="TicketEasy.Views.MainView"
             x:DataType="vm:MainWindowViewModel">

    <UserControl.Styles>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#03DAC6"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BoxShadow" Value="0 2 4 0 #20000000"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        <!-- Result Text Styles -->
        <Style Selector="TextBlock.resultOk">
            <Setter Property="Foreground" Value="#4CAF50"/>
        </Style>
        <Style Selector="TextBlock.resultFail">
            <Setter Property="Foreground" Value="#F44336"/>
        </Style>
        <!-- Connect Button Styles -->
        <Style Selector="Button.connectBtn">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.connected">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, *, Auto" Margin="16" Background="#FAFAFA">
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16" ColumnDefinitions="*, Auto">
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="票易" FontSize="26" FontWeight="Bold" Foreground="#333333"/>
                <TextBlock Text="{Binding AppVersion, StringFormat='v{0}'}" VerticalAlignment="Bottom" Foreground="#757575" FontSize="14"/>
            </StackPanel>
            
            <Button Grid.Column="1" Command="{Binding ToggleSettingsCommand}" 
                    Background="Transparent" Padding="8" CornerRadius="8">
                <PathIcon Data="M19.43,12.98c0.04-0.32,0.07-0.64,0.07-0.98s-0.03-0.66-0.07-0.98l2.11-1.65c0.19-0.15,0.24-0.42,0.12-0.64l-2-3.46c-0.12-0.22-0.39-0.3-0.61-0.22l-2.49,1c-0.52-0.4-1.08-0.73-1.69-0.98l-0.38-2.65C14.46,2.18,14.25,2,14,2h-4c-0.25,0-0.46,0.18-0.49,0.42l-0.38,2.65c-0.61,0.25-1.17,0.59-1.69,0.98l-2.49-1c-0.23-0.09-0.49,0-0.61,0.22l-2,3.46c-0.13,0.22-0.07,0.49,0.12,0.64l2.11,1.65c-0.04,0.32-0.07,0.65-0.07,0.98s0.03,0.66,0.07,0.98l-2.11,1.65c-0.19,0.15-0.24,0.42-0.12,0.64l2,3.46c0.12,0.22,0.39,0.3,0.61,0.22l2.49-1c0.52,0.4,1.08,0.73,1.69,0.98l0.38,2.65C10.05,21.82,10.25,22,10.5,22h4c0.25,0,0.46-0.18,0.49-0.42l0.38-2.65c0.61-0.25,1.17-0.59,1.69-0.98l2.49,1c0.23,0.09,0.49,0,0.61-0.22l2-3.46c0.12-0.22,0.07-0.49-0.12-0.64L19.43,12.98z M12,15.5c-1.93,0-3.5-1.57-3.5-3.5s1.57-3.5,3.5-3.5s3.5,1.57,3.5,3.5S13.93,15.5,12,15.5z" 
                          Foreground="#666" Width="24" Height="24"/>
            </Button>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" IsVisible="{Binding !ShowAbout}" RowDefinitions="Auto,Auto,Auto,*">
                
                <!-- Settings Panel (Collapsible) -->
                <Border Grid.Row="0" Classes="card" IsVisible="{Binding IsSettingsOpen}" Margin="0,0,0,16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="配置" FontWeight="Bold" FontSize="16" Foreground="#444"/>
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                            <TextBox Grid.Column="0" Text="{Binding ProductId}" Watermark="Product ID" Margin="0,0,10,0" Height="40" VerticalContentAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Command="{Binding ConnectCommand}"
                                    Classes="connectBtn"
                                    Classes.connected="{Binding IsConnected}"
                                    Height="40" Width="100" HorizontalContentAlignment="Center"
                                    CornerRadius="6">
                                <Panel>
                                    <TextBlock Text="连接" IsVisible="{Binding !IsConnected}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Text="已连接" IsVisible="{Binding IsConnected}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                </Panel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Combined Scan & Manual Check Area -->
                <StackPanel Grid.Row="1" Spacing="16" Margin="0,0,0,16">
                    
                    <!-- Scan Buttons -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Button Grid.Column="0" Command="{Binding ScanCommand}" 
                                HorizontalAlignment="Stretch" Height="60" 
                                CornerRadius="12" Margin="0,0,10,0"
                                Background="#6200EE" Foreground="White">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                                <PathIcon Data="M4,4h6v6h-6zM14,4h6v6h-6zM4,14h6v6h-6zM16,16h2v2h-2zM14,18h2v2h-2zM18,14h2v2h-2z" 
                                          Foreground="White" Height="24" Width="24"/>
                                <TextBlock Text="扫描二维码" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Grid.Column="1" Command="{Binding ScanImageCommand}"
                                Height="60" Width="60"
                                CornerRadius="12"
                                Background="#3700B3" Foreground="White"
                                ToolTip.Tip="从相册选择">
                             <PathIcon Data="M21,19V5c0-1.1-0.9-2-2-2H5c-1.1,0-2,0.9-2,2v14c0,1.1,0.9,2,2,2h14c1.1,0,2-0.9,2-2z M8.5,13.5l2.5,3.01L14.5,12l4.5,6H5l3.5-4.5z" 
                                       Foreground="White" Height="24" Width="24"/>
                        </Button>
                    </Grid>

                    <!-- Manual Input (Compact) -->
                    <Border Classes="card" Margin="0" Padding="12">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <TextBlock Grid.Column="0" Text="手动:" VerticalAlignment="Center" FontWeight="Bold" Foreground="#555" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1" Text="{Binding ManualCode}" Watermark="输入票码" Margin="0,0,8,0" Height="36" VerticalContentAlignment="Center"/>
                            <Button Grid.Column="2" Content="检票" Command="{Binding ManualCheckCommand}" Height="36" 
                                    VerticalContentAlignment="Center"
                                    Background="#018786" Foreground="White" CornerRadius="6" FontWeight="Bold" Padding="12,0"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- Result Display Area -->
                <Border Grid.Row="2" Classes="card" Background="#FFFFFF" BorderBrush="#EEEEEE" BorderThickness="1">
                    <StackPanel Spacing="5">
                        <TextBlock Text="结果" FontSize="14" Foreground="#999" HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding ResultText}" 
                                   Classes.resultOk="{Binding IsResultOk}"
                                   Classes.resultFail="{Binding !IsResultOk}"
                                   FontSize="28" FontWeight="Black" 
                                   HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Logs (Fills remaining space) -->
                <Border Grid.Row="3" Classes="card" Margin="0">
                    <Grid RowDefinitions="Auto, *">
                        <TextBlock Grid.Row="0" Text="日志" FontWeight="Bold" FontSize="14" Foreground="#444" Margin="0,0,0,4"/>
                        <ListBox Grid.Row="1" ItemsSource="{Binding Logs}" Background="#F5F5F5" BorderThickness="0" CornerRadius="4">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11" Margin="0,1" Foreground="#666" FontFamily="Consolas, Monospace"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

        </Grid>

        <!-- About Content -->
        <ScrollViewer Grid.Row="1" IsVisible="{Binding ShowAbout}">
            <StackPanel Spacing="20" Margin="10,30,10,30" HorizontalAlignment="Center">
                <TextBlock Text="TicketEasy" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding AppVersion, StringFormat='Version {0}'}" HorizontalAlignment="Center" Foreground="Gray"/>
                
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" MaxWidth="300"
                           Text="这是一个简单而高效的票务验证工具。连接您的产品ID并开始扫描。"/>
                
                <Button Content="关闭" Command="{Binding ToggleAboutCommand}" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Actions -->
        <Grid Grid.Row="2" ColumnDefinitions="*, *" Margin="0,10,0,0">
             <Button Grid.Column="0" Content="About" Command="{Binding ToggleAboutCommand}" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Background="Transparent" Foreground="#757575"
                     BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8"
                     Padding="20,10"/>
             
             <Button Grid.Column="1" Command="{Binding OpenPurchaseLinkCommand}" 
                     IsEnabled="{Binding IsConnected}"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Background="#FF9800" Foreground="White"
                     CornerRadius="8" Padding="20,10">
                 <Button.Styles>
                     <Style Selector="Button:pointerover /template/ ContentPresenter">
                         <Setter Property="Background" Value="#F57C00"/>
                         <Setter Property="Foreground" Value="White"/>
                     </Style>
                 </Button.Styles>
                 <StackPanel Orientation="Horizontal" Spacing="8">
                     <PathIcon Data="M7,18c-1.1,0-1.99,0.9-1.99,2S5.9,22,7,22s2-0.9,2-2S8.1,18,7,18z M1,2v2h2l3.6,7.59l-1.35,2.45c-0.16,0.28-0.25,0.61-0.25,0.96c0,1.1,0.9,2,2,2h12v-2H7.42c-0.14,0-0.25-0.11-0.25-0.25l0.03-0.12l0.9-1.63h7.45c0.75,0,1.41-0.41,1.75-1.03l3.58-6.49c0.08-0.14,0.12-0.31,0.12-0.48c0-0.55-0.45-1-1-1H5.21l-0.94-2H1z M17,18c-1.1,0-1.99,0.9-1.99,2s0.89,2,1.99,2s2-0.9,2-2S18.1,18,17,18z"
                               Foreground="White" Width="20" Height="20"/>
                     <TextBlock Text="购票" FontWeight="Bold" VerticalAlignment="Center"/>
                 </StackPanel>
             </Button>
        </Grid>

    </Grid>
</UserControl>
